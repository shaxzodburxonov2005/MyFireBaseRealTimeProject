<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.myfirebaserealtimeproject.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_firsFragment"
            app:destination="@id/firsFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/firsFragment"
        android:name="com.example.myfirebaserealtimeproject.FirsFragment"
        android:label="fragment_firs"
        tools:layout="@layout/fragment_firs" >
        <action
            android:id="@+id/action_firsFragment_to_chatWindowFragment"
            app:destination="@id/chatWindowFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/chatWindowFragment"
        android:name="com.example.myfirebaserealtimeproject.ChatWindowFragment"
        android:label="fragment_chat_window"
        tools:layout="@layout/fragment_chat_window" />
</navigation>